<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    
    <div class="col-md-8">
    <% if current_user.posts.any? %>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts, previous_label: '＜前ページ', next_label: '次ページ＞', :renderer => BootstrapPagination::Rails %>
    <% end %>
    
    </div>
  </div>
  
  
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the TsubuMeMo！</h1>
    <%= link_to "TsubuMeMoをはじめる", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>